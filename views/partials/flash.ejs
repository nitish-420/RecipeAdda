<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show m-0 p-1 " role="alert">
            <%= success %>
            <button type="button" class="close m-0 py-1 px-3" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
    </div>
    <% } %>

<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show m-0 p-1 " role="alert">
    <%= error %>
    <button type="button" class="close m-0  py-1 px-3 " data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    </div>
    <% } %>
    